.brand-container 
  width 140px
  height 74px
  background-color $accent-color
  border-radius 0 0 5px 5px
  text-align: center

.navbar-brand
  padding-top 43px
  margin 0 
  font-size 20px
  font-weight 700
  letter-spacing 0.3px;
  color $default-color
  &:hover
    color $default-color
  span
    color $primary-title-color

.header__menu-btn, .close-btn
  display none

.navbar-nav
  width 453px

.navbar__link
  color $secondary-title-color
  text-transform uppercase
  font-weight 400
  font-family $mainFont
  font-size 14px
  &:hover
    color $accent-color
    transition ease-in-out .5s
    text-decoration none

.navbar__social
  width 53px
  .fab
    color $accent-color
    font-size 20px

@media screen and (max-width: 768px)
  .overlay
    height 100%
    width 0
    position fixed
    z-index 1
    top 0
    left 0
    background-color rgb(0,0,0)
    background-color rgba(0,0,0, 0.9)
    overflow-x hidden
    transition 0.5s
      a
        padding 8px
        text-decoration none
        font-size 36px
        color #818181
        display block
        transition 0.3s
      
  .overlay-content
    position relative
    top 25%
    width 100%
    text-align center
    margin-top 30px

  .header__menu-btn, .close-btn
    display block

  .overlay a:hover, .overlay a:focus
    color #f1f1f1

  .navbar__item
    margin-top 20px
 
  nav 
    .fas
      font-size 30px
      color $secondary-title-color
    .fa-times
      color $default-color

  .navbar__link
    color $default-color

  .navbar__social
    margin 20px auto 0

  .close-btn
    text-align: right 
    margin 20px